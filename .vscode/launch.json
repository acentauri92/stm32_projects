{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "JLink Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/sample/build/sample.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "STM32F446RE",
            "interface": "swd",
            "runToEntryPoint": "main",      // else it starts at reset handler - not interested
            "preLaunchTask": "Build all",   // configured in tasks.json
            "svdFile": "",                  // Include svd to watch device peripherals
            "showDevDebugOutput": "raw", 
            "swoConfig":
            {
                "enabled": true,
                "cpuFrequency": 160000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders":
                [
                    {
                        "label": "ITM port 0 output",
                        "type": "console",
                        "port": 0,
                        "showOnStartup": true,
                        "encoding": "ascii"
                    }
                ]
            }
        }
    ]
}